@model   SmarthHome.Models.ViewModels.RoomAddModel


@{
    ViewBag.Title = "Add";

    var LivingCheck = Model.RoomIds.Contains(1) ? "checked":"";
    var BedCheck = Model.RoomIds.Contains(2) ? "checked" : "";
    var BathCheck = Model.RoomIds.Contains(3) ? "checked" : "";
    var DiningCheck = Model.RoomIds.Contains(4) ? "checked" : "";

}

<div class="main-panel">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top " id="navigation-example">
        <div class="container-fluid">
            <div class="navbar-wrapper">
                <a class="navbar-brand" href="javascript:void(0)"> + Бөлме Қосу</a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation" data-target="#navigation-example">
                <span class="sr-only">Toggle navigation</span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
            </button>

        </div>
    </nav>
    <div class="content">
        <div class="container-fluid">
            <form class="col-lg-12" method="post">
                <div class="card">
                    <div class="card-header card-header-tabs card-header-warning">
                        <div class="nav-tabs-navigation">
                            <div class="nav-tabs-wrapper">
                                <span class="nav-tabs-title">Бөлмелер тізімі:</span>
                           
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="profile">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td style="width:20px">
                                                <div class="form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" type="checkbox" name="Rooms" value="1" @LivingCheck>
                                                        <span class="form-check-sign">
                                                            <span class="check"></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="d-flex roomtext">
                                                    <i class="material-icons">
                                                        living
                                                    </i>
                                                  
                                                        Қонақ бөлме
                                                    
                                                </span>
                                            </td>
                                     
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" type="checkbox" name="Rooms" value="2" @BedCheck>
                                                        <span class="form-check-sign">
                                                            <span class="check"></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="d-flex roomtext">
                                                    <i class="material-icons">
                                                        bed
                                                    </i>

                                                    Жатын бөлме

                                                </span>
                                            </td>
                                       
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" type="checkbox" name="Rooms" value="3" @BathCheck>
                                                        <span class="form-check-sign">
                                                            <span class="check"></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="d-flex roomtext">
                                                    <i class="material-icons">
                                                        bathtub
                                                    </i>

                                                    Жуынатын бөлме

                                                </span>
                                            </td>
                                          
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" type="checkbox" value="4" name="Rooms" @DiningCheck>
                                                        <span class="form-check-sign">
                                                            <span class="check"></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="d-flex roomtext">
                                                    <i class="material-icons">
                                                        kitchen
                                                    </i>

                                                    Ас бөлме

                                                </span>
                                            </td>
                                        
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                         
                        </div>
                    </div>
                </div>


                <button type="submit" class="btn btn-success float-right">Сақтау</button>


                
            </form>
            </div>
        </div>

        </div>
