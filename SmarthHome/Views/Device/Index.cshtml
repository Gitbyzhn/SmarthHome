
@model  SmarthHome.Models.ViewModels.DeviceAddModel

@{
    var Camera = Model.DeviceIds.Contains(1) ? "checked" : "";
    var Light = Model.DeviceIds.Contains(2) ? "checked" : "";
    var Conditioner = Model.DeviceIds.Contains(3) ? "checked" : "";
    var Curtains = Model.DeviceIds.Contains(4) ? "checked" : "";
    var TV = Model.DeviceIds.Contains(5) ? "checked" : "";
}
<link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>




<div class="main-panel">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
        <div class="container-fluid">
            <div class="d-flex flex-column navbar-btntxt">
                <div>

                    <a class="navbar-brand" href="javascript:void(0)"> + Құрылғыларды қосу </a>
                </div>


            </div>



            <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                <span class="sr-only">Toggle navigation</span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
            </button>





        </div>
    </nav>



    <!-- End Navbar -->
    <div class="content">
        <div class="container-fluid">
            <form method="post">
                <div class="row">
                    <div class="col-xl-6 col-lg-12">
                        <div class="card card-chart">
                            <div class="card-header card-header-success">
                                <img src="~/Content/Camera.PNG" style="width:100%" />


                            </div>
                            <div class="card-body">


                                <div class="form-check">
                                    <label class="form-check-label">
                                        <h4 class="card-title d-flex">  <i class="material-icons">camera_rear</i> Камера</h4>

                                        <input class="form-check-input" type="checkbox" name="Devices" value="1" @Camera>
                                        <span class="form-check-sign">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>

                            </div>
                            <div class="card-footer">

                            </div>
                        </div>
                    </div>


                </div>

                <div class="row">
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
                        <div class="card card-stats">
                            <div class="card-header card-header-warning card-header-icon">
                                <div class="card-icon">
                                    <i class="material-icons">light</i>
                                </div>

                                <div class="form-check card-category">
                                    <label class="form-check-label">
                                        Жарық
                                        <input class="form-check-input" type="checkbox" name="Devices" value="2" @Light>
                                        <span class="form-check-sign">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="card-footer">

                            </div>

                        </div>
                    </div>

                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
                        <div class="card card-stats">
                            <div class="card-header card-header-success card-header-icon">
                                <div class="card-icon">
                                    <i class="material-icons">hvac</i>
                                </div>



                                <div class="form-check card-category">
                                    <label class="form-check-label">
                                        Кондиционер
                                        <input class="form-check-input" type="checkbox" name="Devices" value="3" @Conditioner>
                                        <span class="form-check-sign">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>


                            </div>
                            <div class="card-footer">

                            </div>

                        </div>
                    </div>

                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
                        <div class="card card-stats">
                            <div class="card-header card-header-danger card-header-icon">
                                <div class="card-icon">
                                    <i class="material-icons">curtains</i>
                                </div>

                                <div class="form-check card-category">
                                    <label class="form-check-label">
                                        Перделер
                                        <input class="form-check-input" type="checkbox" name="Devices" value="4" @Curtains>
                                        <span class="form-check-sign">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="card-footer">

                            </div>

                        </div>
                    </div>

                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
                        <div class="card card-stats">
                            <div class="card-header card-header-info card-header-icon">
                                <div class="card-icon">
                                    <i class="material-icons">tv</i>
                                </div>

                                <div class="form-check card-category">
                                    <label class="form-check-label">
                                        Android TV
                                        <input class="form-check-input" type="checkbox" name="Devices" value="5" @TV>
                                        <span class="form-check-sign">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="card-footer">

                            </div>

                        </div>
                    </div>
                </div>




                <button type="submit" class="btn btn-success float-right">Сақтау</button>
            </form>

        </div>
    </div>





    @Html.Partial("~/Views/Shared/Footer.cshtml")



</div>


<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>